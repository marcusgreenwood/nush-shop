<%- formTagBegin({action: pathFor('user').resetPassword(), remote:true, method: 'POST', class: 'form-vertical', id: 'forgotPasswordForm' }) %>
<div class="modal fade" id="forgotPassword" style="display : none; overflow : visible; width : 400px; margin-left : -200px;">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h3>Reset password form</h3>
    </div>
    <div class="modal-body">
        <p>
            Please enter either your username or email address. We will send you a link which will enable you to reset your password.
        </p>

        <div class="control-group">
            <div class="controls">
                <input type="text" class="" id="input01" name="email" placeholder="Username or Email address" autofocus="autofocus"/>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="btn-toolbar" style="margin : 0;">
            <div class="btn-group">
                <button class="btn btn-primary" type="submit">Send reset password link</button>
            </div>
            <div class="btn-group">
                <a class="btn" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</div>
<%- formTagEnd() %>

<script type="text/javascript">
    $(document).ready(function() {
        //bind the form ajax
        $('#forgotPasswordForm').bind('ajax:success', function(e, data) {
            $.noty({text: '<i class="icon-' + data.icon + '"></i> ' + data.message, type: data.status});
        });
    });
</script>
